# Disable caching for development

# This ensures your code changes appear immediately

<IfModule mod_headers.c>
    # Disable caching for CSS, JS, and HTML files during development
    <FilesMatch "\.(css|js|html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # For production, comment out the above and use this instead:
    # <FilesMatch "\.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot)$">
    #     Header set Cache-Control "public, max-age=31536000"
    # </FilesMatch>
</IfModule>

# Enable mod_rewrite for clean URLs

<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# Security Headers

<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
